{
  "name": "console",
  "version": "0.3.1",
  "description": "Service provider for read-only console panels",
  "main": "./lib/console",
  "typings": "./types",
  "keywords": [],
  "repository": "https://github.com/idleberg/atom-console",
  "license": "MIT",
  "engines": {
    "atom": ">=1.56.0 <2.0.0"
  },
  "scripts": {
    "analyze": "source-map-explorer lib/**/*.js",
    "build": "rollup --config",
    "dev": "npm run start",
    "lint:code": "eslint --no-error-on-unmatched-pattern ./src/**/*.js",
    "lint:styles": "stylelint --allow-empty-input styles/*.{css,less}",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run build",
    "start": "rollup --watch --config"
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "providedServices": {
    "console-panel": {
      "description": "Read only log console",
      "versions": {
        "1.0.0": "provideConsolePanel"
      }
    }
  },
  "dependencies": {
    "event-kit": "^2.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/preset-env": "^7.12.16",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.12.1",
    "eslint-config-recommended": "^4.1.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettierx": "^0.18.0",
    "remark": "^13.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-prettier": "^0.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^20.0.0",
    "svelte": "^3.32.3",
    "svelte-preprocess": "^4.6.9"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "remark-preset-prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,yml}": "prettierx --write",
    "*.less": "stylelint --cache --fix"
  }
}
