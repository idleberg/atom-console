{
  "name": "console",
  "version": "0.5.0",
  "description": "Service provider for read-only console panels",
  "main": "./lib/console",
  "typings": "./types",
  "keywords": [],
  "repository": "https://github.com/idleberg/atom-console",
  "license": "MIT",
  "engines": {
    "atom": ">=1.56.0 <2.0.0"
  },
  "scripts": {
    "analyze": "source-map-explorer lib/**/*.js",
    "build": "rollup --config",
    "dev": "npm run start",
    "lint:code": "eslint --no-error-on-unmatched-pattern ./src/**/*.js",
    "lint:styles": "stylelint --allow-empty-input styles/*.{css,less}",
    "lint": "npm-run-all --parallel lint:*",
    "prepublishOnly": "npm run build",
    "start": "rollup --watch --config"
  },
  "activationHooks": [
    "core:loaded-shell-environment"
  ],
  "providedServices": {
    "console": {
      "description": "Read only log console",
      "versions": {
        "1.0.0": "provideConsole"
      }
    },
    "console-panel": {
      "description": "Read only log console",
      "versions": {
        "1.0.0": "provideConsole"
      }
    }
  },
  "dependencies": {
    "@atxm/developer-console": "^0.5.0",
    "event-kit": "^2.2.0",
    "svelte": "^3.37.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/eslint-parser": "^7.13.14",
    "@babel/plugin-proposal-export-namespace-from": "^7.12.13",
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@babel/preset-env": "^7.13.15",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@types/atom": "^1.40.10",
    "@types/event-kit": "^2.4.0",
    "@types/node": "^14.14.41",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "core-js": "^3.10.1",
    "eslint": "^7.24.0",
    "eslint-plugin-json": "^2.1.2",
    "husky": ">=4 <5",
    "lint-staged": "^10.5.0",
    "node-sass": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "prettierx": "^0.18.0",
    "remark": "^13.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-prettier": "^0.4.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "source-map-explorer": "^2.5.2",
    "stylelint": "^13.7.2",
    "stylelint-config-standard": "^21.0.0",
    "svelte-preprocess": "^4.4.2",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "remark-preset-prettier"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,md,yml}": "prettierx --write",
    "*.less": "stylelint --cache --fix"
  }
}
